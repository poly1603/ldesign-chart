{
  "name": "@ldesign/chart-core",
  "version": "0.0.1",
  "description": "Core library for @ldesign/chart - A modern, high-performance charting library",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist *.tsbuildinfo"
  },
  "keywords": [
    "chart",
    "visualization",
    "typescript",
    "canvas",
    "echarts-alternative"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "devDependencies": {
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^1.3.1"
  }
}