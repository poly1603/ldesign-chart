{
  "name": "@ldesign/chart",
  "version": "2.0.0",
  "description": "企业级智能图表插件 - 元包（包含 core、vue、react、lit 子包）",
  "keywords": [
    "chart",
    "echarts",
    "visualization",
    "vue",
    "react",
    "lit",
    "web-component",
    "data-visualization",
    "typescript",
    "smart-config",
    "performance",
    "lazy-load"
  ],
  "author": "ldesign",
  "license": "MIT",
  "homepage": "https://github.com/ldesign/chart#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldesign/chart"
  },
  "bugs": {
    "url": "https://github.com/ldesign/chart/issues"
  },
  "private": true,
  "scripts": {
    "build": "pnpm -r --filter './packages/*' build",
    "build:core": "pnpm --filter @ldesign/chart-core build",
    "build:vue": "pnpm --filter @ldesign/chart-vue build",
    "build:react": "pnpm --filter @ldesign/chart-react build",
    "build:lit": "pnpm --filter @ldesign/chart-lit build",
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "test:ui": "pnpm -r test:ui",
    "test:coverage": "pnpm -r test:coverage",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "clean": "pnpm -r clean && rimraf node_modules"
  },
  "devDependencies": {
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  }
}
